_resource_product: select publish, public, login, product.user_id, users.user_group, product_id, supplier_id, prod_id, prod_id, catid, catid, launch_date, obsolence_date, name, low_pic, low_pic, high_pic, thumb_pic, family_id, series_id, topseller, updated, date_added, 'dummy', 'dummy', product_id, high_pic_size, low_pic_size, thumb_pic_size, high_pic_origin
from product inner join users using (user_id) where product_id = 0;

_resource_product_type: single;
_resource_product_key: product_id;
_mapping_product: publish, public, login, edit_user_id, edit_user_group, product_id, supplier_id, prod_id, prod_id4valid, catid, old_catid, launch_date, obsolence_date, name, low_pic, low_pic_formatted, high_pic, thumb_pic, family_id, series_id, topseller, updated, date_added, lang_tabs, tab_names, product_xml_indicator, high_pic_size, low_pic_size, thumb_pic_size, high_pic_origin;

_resource_product_title: SELECT '';
_mapping_product_title: title;

_resource_vcategories: SELECT catid FROM product WHERE product_id = 0;
_resource_vcategories_type: single;
_mapping_vcategories: vcats;

vcats_very_smart_dropdown_attrs: style="width\: 330px;"
format_as_virtual_categories_list: vcats;

_resource_product_country: select existed from country_product where product_id = 0;
_resource_product_country_type: single;
_resource_product_key: product_id;
